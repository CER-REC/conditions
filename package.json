{
  "name": "neb-conditions-visualization",
  "version": "0.0.1",
  "description": "A visualization of data collected since 2010 about conditions on energy projects that the NEB creates as part of their regulatory process. ",
  "main": "app/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm run build:data && npm run build:webpack",
    "build:data": "echo \"Error: not defined\" && exit 1",
    "build:webpack": "echo \"Error: not defined\" && exit 1",
    "ci:test": "npm run test -- -- --reporter mocha-junit-reporter --reporter-options mochaFile=./test-reports/junit.xml && npm run ci:testcoverage",
    "ci:testcoverage": "nyc report --reporter=text-lcov > coverage.lcov && npx codecov",
    "ci:lint": "eslint -f ./node_modules/eslint-junit/index.js ./app/{,**/}*.js{,x} ./server/{,**/}*.js",
    "cz": "git-cz",
    "lint": "eslint ./app/{,**/}*.js{,x} ./server/{,**/}*.js",
    "start": "babel-node ./server/index.js",
    "test": "cross-env NODE_ENV=test nyc mocha app/**/*.spec.{js,jsx}",
    "test:single": "cross-env NODE_ENV=test mocha",
    "test:showcoverage": "opn coverage/lcov-report/index.html",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "author": "Spenser Jones <hello@spenserj.com>",
  "license": "Open Government Liscense - Canada",
  "dependencies": {
    "apollo-boost": "^0.1.20",
    "dialog-polyfill": "^0.4.9",
    "domready": "^1.0.8",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.8.0",
    "immutable": "^3.8.1",
    "lodash.memoize": "^4.1.2",
    "prop-types": "^15.6.0",
    "re-reselect": "^2.0.0",
    "react": "^16.6.0",
    "react-apollo": "^2.2.4",
    "react-dom": "^16.6.0",
    "react-hot-loader": "^4.2.0",
    "react-redux": "^5.0.5",
    "redux": "^3.7.2",
    "reselect": "^3.0.1",
    "reselect-tools": "0.0.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-a11y": "^4.0.2",
    "@storybook/addon-actions": "^4.0.2",
    "@storybook/addon-info": "^4.0.4",
    "@storybook/addon-knobs": "^4.0.2",
    "@storybook/addon-links": "^4.0.2",
    "@storybook/addon-notes": "^4.0.2",
    "@storybook/addon-options": "^4.0.2",
    "@storybook/addon-viewport": "^4.0.2",
    "@storybook/addons": "^4.0.2",
    "@storybook/react": "^4.0.2",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-plugin-react-docgen": "^2.0.0",
    "chai": "^4.1.2",
    "codecov": "^3.1.0",
    "commitizen": "^3.0.4",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.4",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-junit": "^1.0.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "express": "^4.15.3",
    "file-loader": "^2.0.0",
    "jsdom": "^13.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.1.1",
    "mocha-junit-reporter": "^1.18.0",
    "mustache": "^2.3.0",
    "mustache-express": "^1.2.5",
    "node-sass": "^4.5.3",
    "nsp": "^2.7.0",
    "nyc": "^11.7.3",
    "opn-cli": "^4.0.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.6",
    "sinon": "^5.0.7",
    "storybook-addon-specifications": "^2.1.2",
    "storybook-readme": "^4.0.2",
    "style-loader": "^0.18.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.25.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-dev-server": "^2.6.1",
    "webpack-hot-middleware": "^2.18.2"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "exclude": [
      "**/node_modules/**",
      ".cache/",
      "devPublic/",
      "test/",
      "webpack.config.js",
      "**/*.spec.js",
      "**/*.spec.jsx",
      "**/*.stories.jsx"
    ],
    "extension": [
      ".js",
      ".jsx"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": false,
    "instrument": true,
    "cache": true,
    "all": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslint-junit": {
    "suiteName": "ESLint",
    "output": "./test-reports/junit.xml"
  }
}
